<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:padding="16dp"
                app:srcCompat="@drawable/icon_close" />

            <TextView
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:text="排号模式"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>


        <!--内容区-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--字数-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="当前排号"
                android:gravity="center"
                android:textColor="#202020"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/num_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="0001"
                android:gravity="center"
                android:textColor="#FFA75E"
                android:textSize="72dp" />


        </LinearLayout>

        <!--输入区-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/num_mode_blue_bg"
                android:padding="20dp"
                android:layout_marginTop="30dp"
                android:elevation="10dp"
                android:orientation="vertical">

                <!--第一行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/num_1_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="1"/>
                    <Button
                        android:id="@+id/num_2_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="2"/>
                    <Button
                        android:id="@+id/num_3_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="3"/>
                </LinearLayout>

                <!--第二行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/num_4_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="4"/>
                    <Button
                        android:id="@+id/num_5_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="5"/>
                    <Button
                        android:id="@+id/num_6_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="6"/>
                </LinearLayout>

                <!--第三行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/num_7_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="7"/>
                    <Button
                        android:id="@+id/num_8_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="8"/>
                    <Button
                        android:id="@+id/num_9_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="9"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/num_config_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="设置"/>
                    <Button
                        android:id="@+id/num_0_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="0"/>
                    <Button
                        android:id="@+id/num_clear_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:theme="@style/RippleWhite"
                        android:textColor="#ffffff"
                        android:textSize="22dp"
                        android:layout_height="match_parent"
                        android:text="清除"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/num_play_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_mode_bai_btn"
                        android:textColor="#FFA75E"
                        android:textSize="22dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:text="呼叫"/>
                    <Button
                        android:id="@+id/num_next_btn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/num_mode_bai_btn"
                        android:textColor="#FFA75E"
                        android:textSize="22dp"
                        android:layout_height="60dp"
                        android:layout_margin="10dp"
                        android:text="下一个"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>